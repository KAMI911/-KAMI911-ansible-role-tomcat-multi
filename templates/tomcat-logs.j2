# {{ ansible_managed }}
MAILTO=root
HOME={{ tomcat_system_home }}/

{% for instance in tomcat_instance %}
53 01 * * * {{ tomcat_system_user }} find {{ tomcat_system_home }}{{ instance.instance_name }}/logs \( -name \*.current -or -name \*.log -or -name \*.txt -or -name gc_\*.log.\? \) -type f -mtime +2 -print0 | xargs -0 -t -r {{ tomcat_log_compress_command }} {{ tomcat_log_compress_options }}
{% endfor %}
